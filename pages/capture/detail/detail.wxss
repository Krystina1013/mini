page{
  padding: 0 20rpx;

  background: #f9f9f9;
}
.padding-con{
  /* padding-top: 20rpx; */
  padding:20rpx 0rpx;
  background: #f9f9f9;
}
.list{
  font-size: 28rpx;
  justify-content: space-between;
  color:#000;
  padding: 26rpx 30rpx;
  background: #fff;
  margin-bottom:20rpx;
  border-bottom:2rpx solid #f4f4f4;
}
.list::last-child{
  border-bottom:0
}
.list text:last-child{
  display: inline-block;
  width: 60%;
  text-align: right;
  font-weight: 700;
}
.avatar{
  text-align: center;
  margin-top: 30rpx;
  display:flex;
}
.avatar image{
  width: 310rpx;
  height: 310rpx;
  border:1px solid #f4f4f4;
  border-radius: 8rpx;
}
.bottom{
  width: 100%;
  height: 180rpx;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 1;
}
.bottom{
  justify-content: space-around;
}
.empty{
  height: 200rpx;
}
.bottom view{
  width: 332rpx;
  height: 84rpx;
  border-radius: 42rpx;
  font-size: 32rpx;
  text-align: center;
  line-height: 84rpx;
  margin-top: 30rpx;
}
.bottom view:first-child{
  border: 2rpx solid #4BB082;
  color: #4BB082;
}
.bottom view:last-child{
  color: #fff;
  background: #4BB082;
}
.person-title{
  margin-bottom: 20rpx;
  color: #000;
  font-weight: 500;
  font-size: 28rpx;
  padding:24rpx 10rpx;
  border-bottom: 1px solid #f4f4f4;
}
.icon{
  width: 26rpx;
  height: 26rpx;
  margin-right: 8rpx;
  vertical-align: middle;
}
.image-con{
  width: 348rpx;
  height: 392rpx;
  background: #ffffff;
  border: 2rpx solid #f4f4f4;
  border-radius: 22rpx;
  box-shadow: 0rpx 0rpx 20rpx 0rpx rgba(88,123,165,0.10);
  padding:10px;
  color: #333;
  font-size: 28rpx;
}
.image-con1{
  margin-right: 20rpx;
}
.big{
  text-align:center;
  width: 710rpx;
  height: 422rpx;
  margin-top: 20rpx;
  padding:20rpx;
  color: #333;
  font-size: 28rpx;
}
.big image{
  width: 100%;
  height: 336rpx;
  object-fit: contain;
  border:1px solid #f4f4f4;
}
.title{
  margin-top:10rpx;
  text-align: center;
}
.info-con{
  padding: 20rpx;
  background:#fff;
  border: 0;
}
.info-data-con{
  padding:20rpx 40rpx;
 
}
.info-data-con:last-child{
  border:0;
}
.person-one-con{
  border:1px solid #f4f4f4;
  margin-bottom: 20rpx;
}