
.list {
  padding: 14rpx 14rpx 14rpx 26rpx;
  margin-left: 34rpx;
  justify-content: space-between;
  background: #fff;
}

.list image {
  width: 260rpx;
  height: 188rpx;
  margin-top:14rpx;
  background: #D8D8D8;
  border-radius: 8rpx;
}

.list-center {
  height: 242rpx;
  /* padding: 12rpx 0; */
  color: #363636;
  background: #fff;
  font-size: 28rpx;
  flex-direction: column;
  justify-content: space-between;
  width: 100%;
}
.alarm-title{
  color:#333;
  font-weight: 700;
  font-size:28rpx;
  margin-top: 6rpx;
  margin-bottom: 12rpx;
}
.alarm-time{
  margin-top: 12rpx;
}

.list-center>view:last-child {
  color: #979797;
}

.offline {
  padding: 12rpx 0 12rpx 44rpx;
  height: 220rpx;
  flex-direction: column;
  justify-content: space-between;
}

.content {
  padding-bottom: 60rpx;
  position: relative;
}
.mask{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 3;
}
page .content:not(:last-child) {
  border-left: 4rpx dashed #666;
}
.dot-line{
  border: 4rpx solid #fa742b;
  border-radius: 50%;
  background: #f9f9f9; 
  position: absolute;
  top: 0;
  left: -14rpx;
  width: 29rpx;
  height: 29rpx;
}
.dot {
  width: 13rpx;
  height: 13rpx;
  background: #fa742b;
  border-radius: 50%;
  position: absolute;
  top: 4rpx;
  left: 4rpx;
}
.read {
  border: 4rpx solid #B6B6B6;
    /* background: #B6B6B6;
  border-color: #B6B6B6; */
}
.read .dot {
  background: #B6B6B6;
}


.down {
  display: -webkit-box;
  overflow: hidden;
  height: 80rpx;
  color: #666;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
}
.all-read{
  font-size: 28rpx;
  margin-bottom: 20rpx;
  display: flex;
  padding: 12rpx 32rpx;
  align-items: center;
  justify-content: flex-end;
}
.all-read image{
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}
.filter-con {
  width: 100%;
  background: #fff;
  font-size: 28rpx;
  color: #333;
  /* margin: 18rpx 0; */
}
.filter-con .type-con{
justify-content: space-between;
align-items: center;
padding: 10rpx 32rpx;
font-size: 28rpx;
border-bottom: 2rpx solid rgba(0, 0, 0, .1);
}
view .van-dropdown-menu{
  box-shadow: none;
  width: 250rpx;
  background: transparent;
  /* border:1px solid #efefef; */
  /* border-radius: 6rpx; */
  padding-right:10rpx;
  height: 72rpx;
}
view .van-dropdown-menu__title{
  width: 240rpx;
  color: #4BB082;
  text-align: right;
}
view .van-dropdown-menu__item{
  height: 72rpx;
  line-height: 72rpx;
}
.top-month{
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 32rpx;
  font-size: 28rpx;
  height: 94rpx;
  border-bottom: 2rpx solid rgba(0, 0, 0, .1);
}
.top-month image{
  width: 36rpx;
  height: 36rpx;
  margin-right: 10rpx;
}
.top-month .date{
  color: #4BB082;
}
.bottom-date{
  justify-content: space-between;
  margin-top: 17rpx;
  padding: 0 10rpx;
}
.arrow{
  width: 24rpx;
  height: 48rpx;
}
.right{
  transform: rotate(180deg);
}
.days-content{
  width: 580rpx;
  overflow-x: scroll;
  font-size: 28rpx;
  color: #979797;
  line-height: 50rpx;
  white-space: nowrap;
  position: relative;
  height: 104rpx;
}
.scroll{
  position: absolute;
  top: 0;
  left:0rpx;
}
.scroll-item{
  display: inline-block;
  width: 62rpx;
  height: 104rpx;
  text-align: center;
  margin-left: 20rpx;
}
.days-content .active{
  background: #4BB082;
  color: #fff;
  border-radius: 8rpx;
}
.van-picker__confirm{
  color: #4BB082 !important;
}
.time-box{
  width: 100%;
  font-size: 28rpx;
  justify-content: space-between;
  padding: 10rpx 32rpx;
  height: 94rpx;
  line-height: 72rpx;
  border-bottom: 2rpx solid rgba(0, 0, 0, .1);
}
.time-box image{
  width: 32rpx;
  height: 32rpx;
  line-height: 72rpx;
  margin-right: 10rpx;
}
.time-box .icon{
  color: #4BB082;
}
.layout-time{
  width: 580rpx;
  white-space: nowrap;
  overflow-x: scroll;
}
.layout-time view{
  display: inline-block;
  width: 166rpx;
  height: 56rpx;
  font-size: 28rpx;
  color: #979797;
  text-align: center;
  margin-left: 20rpx;
  line-height: 56rpx;
}
.layout-time .active{
  background: #4BB082;
  border-radius: 8rpx;
  color:#fff;
}
.no-data{
  margin-top:60rpx;
}
.reset-btn{
  text-align: center;
  padding: 25rpx;
  font-size: 28rpx;
  color:#333;
}
.empty image{
  width: 380rpx;
  height: 356rpx;
}
.empty{
  display: block;
  margin:100rpx auto 0;
  text-align: center;
  color: #979797;
  font-size: 28rpx;
}
.no-more{
  display: block;
  margin:0 auto 30rpx;
  text-align: center;
  color: #979797;
  font-size: 28rpx;
}
.filter-top{
  padding:24rpx;
  display: flex;
  background: #fff;
  font-size: 28rpx;
  justify-content: space-between;
}
.icon-filter{
  width: 34rpx;
  height: 32rpx;
  vertical-align: middle;
  margin-right: 12rpx;
}
.content-list{
  padding: 34rpx;
  background: #f9f9f9;
}
.bottom-btn {
  justify-content: space-around;
}
.line {
  background: #f1f1f1;
  width: 2rpx;
  height: 62rpx;
  margin-top:13rpx;
}
.alarm-content{
  white-space: nowrap;
}
.read-con{
  position: fixed;
  z-index: 11;
  width: 206rpx;
  height: 56rpx;
  line-height: 56rpx;
  opacity: 1;
  background: #6dcb9f;
  border-radius: 120px;
  box-shadow: 0rpx 8rpx 8rpx 0rpx rgba(0,0,0,0.05); 
  bottom: 30rpx;
  left:50%;
  text-align:center;
  margin-left:-28rpx;
}
.read-con text {
  color:#fff;
}
.read-con image {
  width: 32rpx;
  height: 32rpx;
  vertical-align: middle;
  margin: 0 5rpx 5rpx 0;
}
