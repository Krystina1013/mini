page {
  background: #f9f9f9;
}

.mine {
  position: relative;
  font-size: 28rpx;
  color: #fff;
  padding: 32rpx 30rpx 50rpx 30rpx;
  margin-bottom: 20rpx;
  background-color: #fff;
}

.mine .image {
  width: 100%;
  height: 310rpx;
}

.mine .bg-c {
  background: #1065f7;
}

.mine-bottom {
  border-radius: 6rpx 6rpx 0 0;
  height: 84rpx;
  padding: 0 24rpx;
  line-height: 84rpx;
  align-items: center;
  justify-content: space-between;
  border-bottom: 2rpx solid rgba(255, 255, 255, 0.20);
}

.mine-bottom view {
  width: 80%;
}

.mine-bottom image {
  width: 32rpx;
  height: 32rpx;
}

.school-img {
  margin-right: 20rpx;
}

.mine-name {
  align-items: center;
  height: 194rpx;
  padding: 0 34rpx;
  border-radius: 0 0 6rpx 6rpx;
}

.mine-name .face-back {
  width: 144rpx;
  height: 144rpx;
  padding: 5rpx;
  border-radius: 50%;
  background-color: #fff;
  margin-right: 20rpx;
}

.mine-name image {
  width: 136rpx;
  height: 136rpx;
  border-radius: 50%;
}

.mine-name .name {
  width: 50%;
  font-size: 36rpx;
  margin: 0;
}

.statistics {
  padding: 34rpx 30rpx;
  height: 432rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.title {
  border-radius: 8rpx;
  font-size: 32rpx;
  font-weight: 700;
  color: #171717;
  display: flex;
  align-items: center;
}

.title_icon {
  height: 28rpx;
  width: 6rpx;
  background-color: #1065f5;
  margin-right: 6rpx;
}

.layout {
  justify-content: space-between;
  margin-top: 32rpx;
}

.statistics-col {
  font-size: 28rpx;
  width: 48%;
  height: 278rpx;
  background: #fbfcff;
  border-radius: 8rpx;
  text-align: center;
  color: #9497a6;
  font-weight: 400;
}

.col_title {
  height: 82rpx;
  border-bottom: 2rpx solid #f2f5ff;
  font-size: 32rpx;
  line-height: 82rpx;
}

.col_title image {
  width: 32rpx;
  height: 28rpx;
}

.col_value {
  margin-top: 36rpx;
  font-size: 56rpx;
  font-weight: 700;
  color: #304364;
}

.col_des {
  margin-top: 24rpx;
  font-size: 28rpx;
}

.checkIn {
  width: 100%;
  min-height: 518rpx;
  background-color: #fff;
  padding: 34rpx 30rpx;
}

.checkIn .item-text {
  height: 88rpx;
  line-height: 88rpx;
  font-size: 30rpx;
}

.checkIn .van-cell {
  background-color: #f5faff;
  font-size: 28rpx;
}

.checkIn .van-cell__title {
  color: #383d57;
}

.checkIn .van-cell__value {
  color: #304364;
  font-weight: 700;
}

.checkIn .tab-head {
  margin-top: 16rpx;
}

.checkIn .tab-head,
.record {
  display: flex;
  justify-content: space-between;
}

.checkIn text {
  background-color: #f1f8ff;
  text-align: center;
  width: 50%;
  height: 94rpx;
  line-height: 94rpx;
  color: #383d57;
  font-size: 28rpx;
  border-bottom: 2rpx solid #fff;
}

.checkIn .dark text {
  background-color: #f5faff;
  color: #333333;
  font-weight: 700;
}

.checkIn .left {
  border-right: 1px solid #fff;
}

.empty {
  height: 104rpx;
}