/* pages/addressBook/index.wxss */
.type-tabs .van-tabs__scroll {
  background-color: transparent;
  font-weight: 700;
}

.type-tabs .van-tabs__line {
  background-color: #0E5AFF;
  height: 8rpx;
  bottom: 10rpx;
}

.type-tabs .van-tab {
  font-size: 32rpx;
  font-weight: 400;
}

.type-tabs .van-tab--active {
  color: #0E5AFF;
  font-weight: 700;
}

.van-search__content,
.van-field__control {
  height: 80rpx;
  background-color: #f7f8ff !important; 
  font-size: 28rpx !important;
  font-weight: 400 !important;
}

.van-field__body {
  height: 60rpx;
}

.van-icon-search {
  margin-top: 20rpx !important;
  font-size: 34rpx !important;
  font-weight: 700 !important;
}

.book-list {
  border-top: 2rpx solid #f7f8ff;
  display: flex;
}

.search_empty {
  flex: 1;
  margin-top: 200rpx;
  text-align: center;
  color: #979797;
  font-size: 28rpx;
}

.search_empty image {
  width: 380rpx;
  height: 356rpx;
}

.search_empty>view {
  text-align: center;
}

.silder {
  position: relative;
  width: 224rpx;
  flex: 0 0 224rpx;
  height: calc(100vh - 190rpx);
  border-right: 1px solid #f7f8ff;
}

.silder .van-sidebar-item {
  width: 222rpx;
  height: 80rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  font-weight: 400;
  line-height: 80rpx;
  background-color: #fff;
}

.list-layout {
  overflow-y: scroll;
  flex: 1;
}

.items {
  height: 106rpx;
  padding: 16rpx 34rpx 16rpx 16rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #171717;
}

.border {
  border-bottom: 2rpx solid #f7f8ff;
}

.van-icon {
  color: #C7C7C7;
  font-size: 32rpx;
}

.details {
  height: 64rpx;
  width: 64rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.details image {
  width: 100%;
  height: 100%;
}

.title {
  font-size: 32rpx;
  font-weight: 700;
  color: #304364;
}

.title-name {
  font-size: 32rpx;
  font-weight: 700;
}

.date {
  margin-top: 0;
  font-size: 28rpx;
  font-weight: 400;
  color: #383d57;
}

.van-sidebar-item--selected,
.van-sidebar-item--selected {
  background-color: #f7f8ff !important;
  border-color: transparent !important;
  color: #1567f7 !important;
  font-weight: 700 !important;
  font-size: 28rpx !important;
}

.van-sidebar-item__text {
  width: 100% !important;
}